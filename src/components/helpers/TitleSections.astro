---
export interface Props {
  title?: string
	text?: string
  bgColor?: string
}

const { title, text, bgColor } = Astro.props;
---
<div class="w-full max-w-[700px] text-white text-center flex flex-col justify-center items-center my-4">
  <h2 class="text-2xl mt-2 pb-1">{title}</h2>
  <div class={`${bgColor}  h-[4px] w-[60px]`}></div>
  <p class=" text-lg py-2">
    {text}
  </p>
</div>
