---
import '../../styles/contact/formEmail.css';

import TitleSections from '../helpers/TitleSections.astro';
---

<section id="contacto" class="mx-auto max-w-[1200px] px-4 lg:px-[60px] pt-[30px] lg:pb-[100px] pb-10 flex justify-center flex-col items-center">
  <TitleSections
    title='Contacto'
    text='Lorem ipsum dolor sit amet consectetur adipisicing elit. Tenetur quisquam voluptates officia aliquid, sapiente, ipsam natus quasi.'
    bgColor='bg-blueviolet'
  />
  <div class="form-container">
    <form class="form" netlify>
      <div class="form-group">
        <label for="email">Tú Email</label>
        <input name="email" id="email" type="text">
      </div>
      <div class="form-group">
        <label for="textarea">¿Cómo puedo ayudarte?</label>
        <textarea required="" cols="50" rows="10" id="textarea" name="menssaje"></textarea>
      </div>
      <button type="submit" class="form-submit-btn">Submit</button>
    </form>
  </div>
</section>